<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Main Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white">

        <!-- Toolbar -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/orange"
            app:title="Courses"
            android:titleTextColor="@android:color/white" />

        <!-- Scrollable content -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/mainLayout"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <!-- 6-Month Courses -->
                <ImageButton
                    android:id="@+id/imageButtonSixMonth"
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:layout_marginBottom="8dp"
                    android:background="@android:color/transparent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/img"
                    android:contentDescription="Show six-month courses" />

                <LinearLayout
                    android:id="@+id/sixMonthCoursesLayout"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:paddingTop="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Six-Month Courses (R1500 each)"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:paddingBottom="8dp" />

                    <CheckBox
                        android:id="@+id/cbFirstAid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="First Aid - R1500" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Learn CPR, wound care, and emergency basics."
                        android:paddingBottom="10dp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black"
                        android:textStyle="bold" />

                    <CheckBox
                        android:id="@+id/cbSewing"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="Sewing - R1500" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tailoring, stitching, alterations, and new garment creation."
                        android:paddingBottom="10dp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black"
                        android:textStyle="bold" />

                    <CheckBox
                        android:id="@+id/cbLandscaping"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="Landscaping - R1500" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Design gardens and outdoor layouts with balance and creativity."
                        android:paddingBottom="10dp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black"
                        android:textStyle="bold" />

                    <CheckBox
                        android:id="@+id/cbLifeSkills"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="Life Skills - R1500" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Learn basic literacy, numeracy, and everyday life management."
                        android:paddingBottom="10dp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- 6-Week Courses -->
                <ImageButton
                    android:id="@+id/imageButtonSixWeek"
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:layout_marginTop="16dp"
                    android:background="@android:color/transparent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/img_2"
                    android:contentDescription="Show six-week courses" />

                <LinearLayout
                    android:id="@+id/sixWeekCoursesLayout"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:paddingTop="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Six-Week Short Courses (R750 each)"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:paddingBottom="8dp" />

                    <CheckBox
                        android:id="@+id/cbChildMinding"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="Child Minding - R750" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Child care basics, safety, and educational activities."
                        android:paddingBottom="10dp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black"
                        android:textStyle="bold" />

                    <CheckBox
                        android:id="@+id/cbCooking"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="Cooking - R750" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Prepare nutritious meals and understand food groups."
                        android:paddingBottom="10dp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black"
                        android:textStyle="bold" />

                    <CheckBox
                        android:id="@+id/cbGarden"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="Garden Maintenance - R750" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Learn proper watering, pruning, and planting techniques."
                        android:paddingBottom="20dp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- Enquire Button -->
                <Button
                    android:id="@+id/btnEnquire"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Enquire About a Course"
                    android:backgroundTint="@color/orange"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginTop="16dp"
                    android:elevation="4dp" />

                <!-- Proceed Button -->
                <Button
                    android:id="@+id/btnProceed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Proceed to Payment"
                    android:backgroundTint="@color/orange"
                    android:textColor="@android:color/white"
                    android:layout_marginTop="16dp" />

                <!-- Back Button -->
                <Button
                    android:id="@+id/backButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Back"
                    android:backgroundTint="@color/orange"
                    android:textColor="@android:color/white"
                    android:layout_marginTop="16dp" />

                <!-- Discount Info -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="\nDiscounts: 1 course = 0% • 2 = 5% • 3 = 10% • 4+ = 15%"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:paddingTop="8dp" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <!-- Navigation Drawer -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@android:color/white"
        app:menu="@menu/drawer_menu" />

</androidx.drawerlayout.widget.DrawerLayout>
